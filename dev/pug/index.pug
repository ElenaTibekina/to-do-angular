extends template/main

block variables
	- var title = 'Главная страница'
	- var pageClass = 'index-page'

block content
	.container
		.start-form
			.start-form__header
				.start-form__photo
				.start-form__navigation
					a(href="").start-form__navigation_link.is-active Sign in
					a(href="").start-form__navigation_link Sign Up
			.start-form__body
				form.start-form__form.form
					.form__body
						.form-group
							.form-group__icon
								+icon('user')
							.form-group__input
								input(placeholder="Username").g-input
						.form-group
							.form-group__icon
								+icon('lock')
							.form-group__input
								input(type="password" placeholder="Password").g-input
					.form__footer
						.btn
							span.btn__text Continue
						.btn.btn--transparent
							span.btn__text Forgot Password